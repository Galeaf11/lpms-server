{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2020",
      "esnext"
    ],
    "target": "es2020",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "baseUrl": ".",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "composite": true,
    "skipLibCheck": true
  },
  "include": [
    "src",
    "test",
    "swagger"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "reflect-metadata",
    "swagger-express-ts"
  ]
}
